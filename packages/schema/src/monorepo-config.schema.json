{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://utori.dev/udev/monorepo-config.schema.json",
  "title": "MonorepoConfig",
  "description": "Configuration for a monorepo",
  "properties": {
    "workspaces": {
      "description": "Workspace definitions for the monorepo",
      "type": "array",
      "items": {
        "$ref": "#/$defs/WorkspaceDefinition"
      }
    }
  },
  "additionalProperties": false,
  "type": "object",
  "$defs": {
    "WorkspaceDefinition": {
      "description": "Defines a workspace in a monorepo. If this is a string, it is expected to be the same as `pattern`",
      "type": [
        "object",
        "string"
      ],
      "properties": {
        "pattern": {
          "description": "Pattern used to find the workspace package(s) in the monorepo",
          "type": "string"
        }
      },
      "required": [
        "pattern"
      ],
      "additionalProperties": false
    }
  }
}
